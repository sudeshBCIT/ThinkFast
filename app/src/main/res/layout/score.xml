<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff538">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtscore"
            android:text="MY SCORE : "
            android:textSize="20dp"
            android:paddingLeft="92dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:textSize="20dp"
            android:id="@+id/editscore"
            android:layout_marginTop="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTopScores"
            android:text="TOP 3 SCORES : "
            android:textSize="20dp"
            android:layout_below="@id/txtscore"
            android:paddingLeft="92dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstScore"
            android:text="1) "
            android:textSize="20dp"
            android:layout_below="@id/txtTopScores"
            android:paddingLeft="92dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:layout_below="@id/txtTopScores"
            android:layout_toRightOf="@id/firstScore"
            android:id="@+id/first_place"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondScore"
            android:text="2) "
            android:textSize="20dp"
            android:layout_below="@id/firstScore"
            android:paddingLeft="92dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/firstScore"
            android:layout_toRightOf="@id/secondScore"
            android:textSize="20dp"
            android:id="@+id/second_place"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdScore"
            android:text="3) "
            android:textSize="20dp"
            android:layout_below="@id/secondScore"
            android:paddingLeft="92dp"
            android:layout_marginBottom="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_below="@id/secondScore"
            android:layout_toRightOf="@id/thirdScore"
            android:textSize="20dp"
            android:id="@+id/third_place"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="PLAY AGAIN"
            android:id="@+id/continue12"
            android:onClick="backtoActivity"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/thirdScore"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="MAIN MENU"
            android:onClick="backToOptions"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/continue12"
            android:id="@+id/main_button"
            />
    </RelativeLayout>
</LinearLayout>